<?xml version="2.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#181818"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#181818"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/PrefDate"
                    android:background="@drawable/cal_left_arrow_off"
                    />

                <TextView
                    android:id="@+id/textViewPrevDate"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="30dp"
                    android:text="pre"
                    android:textColor="#9ED46B"
                    android:textSize="35dp"
                    android:visibility="invisible"
                    android:background="@drawable/cal_left_arrow_off"
                    android:layout_weight="0.07"/>

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="textViewDate"
                    android:textColor="#ffffff"
                    android:textSize="24dp"/>

                <TextView
                    android:id="@+id/textViewNextDate"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="next"
                    android:textColor="#9ED46B"
                    android:textSize="35dp"
                    android:visibility="invisible"
                    android:layout_weight="0.07"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/NextDate"
                    android:background="@drawable/cal_right_arrow_off"
                    android:adjustViewBounds="false"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_grit">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:id="@+id/imageView"
            android:background="@drawable/ic_zon"
            android:adjustViewBounds="true"
            android:gravity="center_vertical"
            android:scaleType="fitXY"

            android:layout_x="0dp"
            android:layout_y="0dp"
            android:layout_row="0"
            android:layout_column="0" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_row="0"
            android:layout_column="1"
            >

            <EditText
                android:layout_width="350dp"
                android:layout_height="185dp"
                android:id="@+id/editText"
                android:background="@color/black"
                android:hint="Eerste Gerecht"
                android:paddingLeft="15dp"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_row="0"
            android:layout_column="2"
            >

            <EditText
                android:layout_width="350dp"
                android:layout_height="185dp"
                android:id="@+id/editText2"
                android:background="@color/black"
                android:hint="Tweede Gerecht"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="185dp"
            android:layout_row="0"
            android:layout_column="3">

            <EditText
                android:layout_width="350dp"
                android:layout_height="185dp"
                android:id="@+id/editText3"
                android:background="@color/black"
                android:hint="Derde Gerecht"
                android:inputType="text" />
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:id="@+id/imageView2"
            android:background="@drawable/ic_middag"
            android:layout_row="1"
            android:layout_column="0"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_row="1"
            android:layout_column="1">

            <EditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:id="@+id/editText4"
                android:background="@color/black"
                android:hint="Voorgerecht"
                android:paddingLeft="15dp"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/editText5"
                android:background="@color/black"
                android:hint="Hoofdgerecht"
                android:paddingLeft="15dp"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/editText16"
                android:background="@color/black"
                android:hint="Dessert"
                android:paddingLeft="15dp"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_row="1"
            android:layout_column="2">

            <EditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:id="@+id/editText6"
                android:background="@color/black"
                android:hint="Voorgerecht"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/editText7"
                android:background="@color/black"
                android:hint="Hoofdgerecht"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/editText17"
                android:hint="Dessert"
                android:background="@color/black"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_row="1"
            android:layout_column="3">

            <EditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:id="@+id/editText8"
                android:hint="Voorgerecht"
                android:background="@color/black"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/editText9"
                android:hint="Hoofdgerecht"
                android:background="@color/black"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/editText18"
                android:hint="Dessert"
                android:background="@color/black"
                android:inputType="text" />
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_maan"
            android:layout_row="2"
            android:layout_column="0"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_row="2"
            android:layout_column="1">

            <EditText
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:id="@+id/editText10"
                android:hint="Gerecht"
                android:background="@color/black"
                android:paddingLeft="15dp"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/editText11"
                android:hint="Dessert"
                android:background="@color/black"
                android:paddingLeft="15dp"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_row="2"
            android:layout_column="2">

            <EditText
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:id="@+id/editText12"
                android:hint="Gerecht"
                android:background="@color/black"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/editText13"
                android:hint="Dessert"
                android:background="@color/black"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_row="2"
            android:layout_column="3">

            <EditText
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:id="@+id/editText14"
                android:hint="Gerecht"
                android:background="@color/black"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/editText15"
                android:hint="Dessert"
                android:background="@color/black"
                android:inputType="textCapCharacters" />
        </LinearLayout>

    </GridLayout>

    <Button
        android:id="@+id/keuzeVanDeDag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Keuze voor de dag"
        android:background="@color/blue"/>

</LinearLayout>