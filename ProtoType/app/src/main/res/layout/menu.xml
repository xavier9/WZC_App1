<?xml version="2.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#181818"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#181818"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/PrefDate"
                    android:background="@drawable/cal_left_arrow_off"
                    />

                <TextView
                    android:id="@+id/textViewPrevDate"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="30dp"
                    android:text="pre"
                    android:textColor="#9ED46B"
                    android:textSize="35dp"
                    android:visibility="invisible"
                    android:background="@drawable/cal_left_arrow_off"
                    android:layout_weight="0.07"/>

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="textViewDate"
                    android:textColor="#ffffff"
                    android:textSize="24dp"/>

                <TextView
                    android:id="@+id/textViewNextDate"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="next"
                    android:textColor="#9ED46B"
                    android:textSize="35dp"
                    android:visibility="invisible"
                    android:layout_weight="0.07"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/NextDate"
                    android:background="@drawable/cal_right_arrow_off"
                    android:adjustViewBounds="false"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_grit">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:id="@+id/imageView"
            android:background="@drawable/ic_zon"
            android:adjustViewBounds="true"
            android:gravity="center_vertical"
            android:scaleType="fitXY"

            android:layout_x="0dp"
            android:layout_y="0dp"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:id="@+id/imageView2"
            android:background="@drawable/ic_middag"
            android:layout_row="1"
            android:layout_column="0"/>

        <CheckBox
            android:layout_width="320dp"
            android:layout_height="177dp"
            android:text="New CheckBox"
            android:id="@+id/checkBox4"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@color/black"
            android:textSize="35dp" />

        <CheckBox
            android:layout_width="320dp"
            android:layout_height="177dp"
            android:text="New CheckBox"
            android:id="@+id/checkBox5"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="35dp" />

        <CheckBox
            android:layout_width="320dp"
            android:layout_height="177dp"
            android:text="New CheckBox"
            android:id="@+id/checkBox6"
            android:background="@color/black"
            android:textSize="35dp" />

        <CheckBox
            android:layout_width="320dp"
            android:layout_height="177dp"
            android:text="New CheckBox"
            android:id="@+id/checkBox"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@color/black"
            android:textSize="35dp" />

        <CheckBox
            android:layout_width="320dp"
            android:layout_height="177dp"
            android:text="New CheckBox"
            android:id="@+id/checkBox2"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="35dp" />

        <CheckBox
            android:layout_width="320dp"
            android:layout_height="177dp"
            android:text="New CheckBox"
            android:id="@+id/checkBox3"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="3"
            android:textSize="35dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_maan"
            android:layout_row="2"
            android:layout_column="0"/>

        <CheckBox
            android:layout_width="320dp"
            android:layout_height="177dp"
            android:text="New CheckBox"
            android:id="@+id/checkBox7"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@color/black"
            android:textSize="35dp" />

        <CheckBox
            android:layout_width="320dp"
            android:layout_height="177dp"
            android:text="New CheckBox"
            android:id="@+id/checkBox8"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="35dp" />

        <CheckBox
            android:layout_width="320dp"
            android:layout_height="177dp"
            android:text="New CheckBox"
            android:id="@+id/checkBox9"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="35dp" />

    </GridLayout>

    <Button
        android:id="@+id/findSelected"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Geef uw keuze door"
        android:background="@color/blue"
        android:textSize="35dp" />

</LinearLayout>